<%- include("partials/head.ejs", {pageTitle}) %>
		<link href="/css/form.css" rel="stylesheet" />
	</head>
	<body>
        <%- include("partials/nav.ejs", {pageTitle, isAuth}) %>
		<main>
            <h3 class="form-title">Add a Product</h3>
            <form action="/signup" method="POST" class="form">
			    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                <div class="form-control">
					<label for="name">name<input id="name" name="name" type="text" /></label>
                </div>
				<div class="form-control">
					<label for="email">Email<input id="email" name="email" type="email" /></label>
                </div>
                <div class="form-control">
					<label for="password1">Password<input id="password1" name="password1" type="password" /></label>
                </div>
                <div class="form-control">
					<label for="password2">Confirm Password<input id="password2" name="password2" type="password" /></label>
                </div>
				<button type="submit" class="btn btn-primary">Sign Up</button>
			</form>
		</main>
<%- include("partials/end.ejs") %>